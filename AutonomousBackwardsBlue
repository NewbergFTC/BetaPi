//
//            double ultraSonicValue = ultrasonicSensor.getUltrasonicLevel();
//
//            while (ultraSonicValue > 12) {
//                telemetry.addData("ultra Sonic Value",ultraSonicValue);
//                ultraSonicValue = ultrasonicSensor.getUltrasonicLevel();
//                //right
//                DriveRight(0);
//                telemetry.update();
